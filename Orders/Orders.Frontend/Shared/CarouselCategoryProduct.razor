<div class="container" @onmouseleave="OnMouseLeave" @onmouseenter="OnMouseEnter">

    <div id="@carousel" class="carousel" @onmousedown="OnMouseDown" @onmousemove="OnMouseMove" @onmouseup="OnMouseUp"
         @ontouchstart="OnTouchStart" @ontouchmove="OnTouchMove" @ontouchend="OnMouseUp">
        
        @foreach (var card in Cards)
        {
                <Card Title="@card.Title"
                      Description="@card.Description"
                      ImageUrl="@card.ImageUrl"
                      Price="@card.Price" />
        }

    </div>

    <button class="btn btn-primary position-absolute top-50 start-0 translate-middle-y nav-button"
            @onclick="ShowPrevious"
            disabled="@(CurrentScrollPosition == 0)">
        <i class="bi bi-chevron-left"></i>
    </button>

    <button class="btn btn-primary position-absolute top-50 end-0 translate-middle-y nav-button"
            @onclick="ShowNext" 
            disabled="@(PromMaxScrollPosition == 0)">
        <i class="bi bi-chevron-right"></i>
    </button>

</div>
