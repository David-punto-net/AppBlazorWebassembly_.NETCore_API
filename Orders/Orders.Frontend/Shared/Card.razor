<div class="card"> 
  
    <img src="@ImageUrl" class="card-img fixed-size-img" alt="@Title">

    <div class="card-body d-flex flex-column justify-content-between">

        <div>
            <h5 class="card-title">@Title</h5>
            <p class="card-description">@Description</p>
        </div>
      
            <h3 class="card-price">$@Price.ToString("N0")</h3>
    </div>
    <div class="d-flex justify-content-around mb-3">
        <button class="btn btn-dark add-to-cart"><i class="bi bi-cart-plus"></i> Agregar al carro</button>
    </div>
  
</div>


