@page "/states/details/{StateId:int}"

@if (state is null)
{
    <Loading />
}
else
{
    <div class="container-fluid mb-3">
        <div class="card mt-2">
            <div class="card-header">
                <i class="bi bi-globe-americas"></i> <strong>Detalle Región</strong>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <h3>@state!.Name</h3>
                    </div>
                    <div class="col-md-4">
                        <p>N° de Ciudades: @state.CitiesNumber</p>
                    </div>
                </div>
                <div class="mb-2">
                    <a class="btn btn-dark btn-sm" href="/countries/details/@state.CountryId"><i class="bi bi-arrow-return-left"></i> Regresar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="card mt-2">

            <div class="card-header">
                <i class="bi bi-globe-americas"></i> <strong>Ciudades</strong>
            </div>

            <div class="card-body">

                <p>
                    <a class="btn btn-dark btn-sm" href="/cities/create/@StateId"><i class="bi bi-plus-circle"></i> Nueva Ciudad</a>
                </p>

                <hr />

                <div class="row mb-3">
                    <div class="col">
                        <div class="page-size-chooser">
                            Items por página:
                            <select @bind="@PaginationGrid.ItemsPerPage">
                                <option>5</option>
                                <option>10</option>
                                <option>20</option>
                                <option>50</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="search-box">
                            <input type="search" autofocus @bind="Filter" placeholder="Nombre Ciudad..." />
                            <button @onclick="Filtrar" class="btn btn-dark btn-sm"><i class="bi bi-search"></i></button>
                            <button @onclick="Refrescar" class="btn btn-dark btn-sm"><i class="bi bi-arrow-clockwise"></i></button>
                        </div>
                    </div>
                </div>

                <hr />

                <div id="view-all">

           @*          <GenericList MyList="Cities">
                        <Body> *@

                    <QuickGrid class="table table-striped table-hover" ItemsProvider="CitiesProvider" Pagination="PaginationGrid" @ref="myGrid">
                        <PropertyColumn Property="@(p => p.Name)" Title="Ciudad" Class="city-name" />
                        <TemplateColumn>
                            <a class="btn btn-outline-dark btn-sm" href="/cities/edit/@context.Id"><i class="bi bi-pencil-fill"></i></a>
                            <button @onclick=@(() => DeleteAsync(context)) class="btn btn-outline-dark btn-sm"><i class="bi bi-trash3-fill"></i></button>
                        </TemplateColumn>
                    </QuickGrid>

                    <Paginator State="PaginationGrid" />

                      @*   </Body>
                    </GenericList> *@

                </div>
            </div>
        </div>

    </div>


}


