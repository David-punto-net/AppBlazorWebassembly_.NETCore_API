@page "/countries"

<PageTitle>Paises</PageTitle>

@* <h1>Paises</h1> *@


<div class="container-fluid">

    <div class="card mt-2">

        <div class="card-header">
            <i class="bi bi-globe-americas"></i> <strong>Paises</strong>
        </div>

        <div class="card-body">

            <p>
                <a class="btn btn-dark btn-sm" href="/countries/create"><i class="bi bi-plus-circle"></i> Nuevo País</a>
            </p>

            <hr />

            <div class="row mb-3">
                <div class="col">
                    <div class="page-size-chooser">
                        Items por página:
                        <select @bind="@PaginationGrid.ItemsPerPage">
                            <option>5</option>
                            <option>10</option>
                            <option>20</option>
                            <option>50</option>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="search-box">
                        <input type="search" autofocus @bind="nameFilter" placeholder="Nombre país..." />
                        <button @onclick=@(() => Filtrar()) class="btn btn-dark btn-sm"><i class="bi bi-search"></i></button>
                        <button @onclick=@(() => Refrescar()) class="btn btn-dark btn-sm"><i class="bi bi-arrow-clockwise"></i></button>
                    </div>
                </div>
            </div>

            <hr />

            <div id="view-all">

                <GenericList MyList="Countries!">
                    <Body>

                        <Pagination CurrentPage="currentPage"
                                    TotalPage="totalPages"
                                    SelectPage="SelectedPageAsync" />



                        <QuickGrid class="table table-striped table-hover" Items="@Countries" Pagination="PaginationGrid">
                            <PropertyColumn Property="@(p => p.Name)" Sortable="true" Title="País" Align="Align.Left" />
                            <PropertyColumn Property="@(p => p.StatesNumber)" Sortable="true" Title="N° de Regiones" Align="Align.Left" />
                            <TemplateColumn>
                                <a class="btn btn-outline-dark btn-sm" href="/countries/edit/@context.Id"><i class="bi bi-pencil-fill"></i></a>
                                <a class="btn btn-outline-dark btn-sm" href="/countries/details/@context.Id"><i class="bi bi-list-columns-reverse"></i></a>
                                <button @onclick=@(() => DeleteAsync(context)) class="btn btn-outline-dark btn-sm"><i class="bi bi-trash3-fill"></i></button>
                            </TemplateColumn>
                        </QuickGrid>

                        <Paginator State="PaginationGrid" />

                    </Body>
                </GenericList>

            </div>
        </div>
    </div>

</div>



