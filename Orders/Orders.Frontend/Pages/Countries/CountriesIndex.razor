@page "/countries"

<PageTitle>Paises</PageTitle>

<h1>Paises</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo País</a>
</div>

<GenericList MyList="Countries">
    <Body>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>País</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var country in Countries!)
                    {
                        <tr>
                            <td> @country.Name</td>
                            <td>
                            <a class="btn btn-warning" href="/countries/edit/@country.Id">Editar</a>
                            <button @onclick=@(() => DeleteAsync(country)) class="btn btn-danger">Borrar</button>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </Body>
</GenericList>

